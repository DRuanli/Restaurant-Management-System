@model RestaurantSystem.Models.LoginViewModel

@{
    Layout = null; // Optional: Remove this line if you want to use the default layout
}

<h2 class="text-center">Login</h2>
<div style="max-width: 400px; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 5px;">
    <form asp-action="Login" method="post">
        <input type="hidden" name="role" value="@ViewBag.Role" />

        <div class="form-group">
            <label for="username">Username</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Sign In</button>

        @if (ViewBag.ErrorMessage != null)
        {
            <p style="color: red; margin-top: 10px;">@ViewBag.ErrorMessage</p>
        }
    </form>
</div>
